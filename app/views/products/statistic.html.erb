<table class="table statistic-table">
  <thead>
  <tr>
    <th>Brand Name</th>
    <th>Shopbop Products</th>
    <th>Shopbop Products without UPC</th>
    <th>Other sources Products</th>
    <th>Products with Suggestions</th>
  </tr>
  </thead>
  <tbody>
  <% @brands.each do |brand| %>
    <tr data-brand="<%= brand.name %>" class="hide">
      <td>{{name}}</td>
      <td>{{shopbop_size}}</td>
      <td>{{shopbop_noupc_size}}</td>
      <td>
        <span data-toggle="popover" data-trigger="hover" data-html="true" data-content="{{amounts_content}}">{{amounts_values}}</span>
      </td>
      <td>{{suggestions}}</td>
    </tr>
  <% end %>
  </tbody>
</table>